
@{
    ViewBag.Title = "Index";
}

 <div class="container-fluid">
      <div class="row">
         <div class="col-md-5">
            <div class="card">
               <div class="card-body">
                  <div class="row">
                     <div class="col">
                        <center>
                           <img width="100px" src="images/generaluser.png"/>
                        </center>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <center>
                           <h4>Your Profile</h4>
                           <span>Account Status - </span>
                           <asp:Label class="badge badge-pill badge-info" ID="Label1" runat="server" Text="Your status"></asp:Label>
                        </center>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <hr>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-6">
                        <label>Full Name</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox1" runat="server" placeholder="Full Name"/>
                        </div>
                     </div>
                     <div class="col-md-6">
                        <label>Username</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox2" runat="server" placeholder="Username" />
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-6">
                        <label>Contact No</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox3" runat="server" placeholder="Contact No" input type="Number"/>
                        </div>
                     </div>
                     <div class="col-md-6">
                        <label>Email ID</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox4" runat="server" placeholder="Email ID" input type="Email"/>
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-3">
                        <label>City</label>
                        <div class="form-group">
                            <select class="form-control" id="DropDownList1" name="City" runat="server">
                                <option>Select</option> 
                                <option>Dhaka</option> 
                                <option>Chittagong</option> 
                                <option>Rangpur</option> 
                                <option>Sylhet</option> 
                                <option>Khulna</option> 
                            </select>
                        </div>
                     </div>
                     <div class="col-md-3">
                        <label>Area</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox6" runat="server" placeholder="Area"/>
                        </div>
                     </div>
                     <div class="col-md-3">
                        <label>Pincode</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox7" runat="server" placeholder="Pincode" input type="Number"/>
                        </div>
                     </div>
                  </div>
                  
                  <div class="row">
                     <div class="col">
                        <center>
                           <span class="badge badge-pill badge-info">Login Credentials</span>
                        </center>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-4">
                        <label>Username</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox8" runat="server" placeholder="User ID" ReadOnly="True"/>
                        </div>
                     </div>
                     <div class="col-md-4">
                        <label>Old Password</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox10" runat="server" placeholder="Old Password" input type="Password"/>
                        </div>
                     </div>
                     <div class="col-md-4">
                        <label>New Password</label>
                        <div class="form-group">
                           <input class="form-control" ID="TextBox10" runat="server" placeholder="New Password" input type="Password"/>
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-8 mx-auto">
                        <center>
                           <div class="form-group">
                               <a href="Home"><input class="btn btn-info btn-block btn-lg" id="Button2" type="button" value="Update" /></a>
                           </div>
                        </center>
                     </div>
                  </div>
               </div>
            </div>
            <a href="Home"><< Back to Home</a><br><br>
         </div>

         <div class="col-md-7">
            <div class="card">
               <div class="card-body">
                  <div class="row">
                     <div class="col">
                        <center>
                           <img width="100px" src="images/books1.png"/>
                        </center>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <center>
                           <h4>Your Issued Books</h4>
                           <asp:Label class="badge badge-pill badge-info" ID="Label2" runat="server" Text="your books info"></asp:Label>
                        </center>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <hr>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col">
                        <input class="table table-striped table-bordered" ID="GridView1" runat="server"/>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>  </div>
   </div>

