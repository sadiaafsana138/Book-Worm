@model IEnumerable<BookWorm.Models.Defaulter_Table>

@{
    ViewBag.Title = "BookIssuing";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <h4>Book Issuing</h4>
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <center>
                                <img width="100px" src="images/books.png" />
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Member ID</label>
                            <div class="form-group">
                                <input CssClass="form-control" ID="TextBox2" runat="server" placeholder="Member ID" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Book ID</label>
                            <div class="form-group">
                                <div class="input-group">
                                    <input CssClass="form-control" ID="TextBox1" runat="server" placeholder="Book ID"></input>
                                    <asp:Button class="btn btn-primary" ID="Button1" runat="server" value="Go" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Member Name</label>
                            <div class="form-group">
                                <input CssClass="form-control" ID="TextBox3" runat="server" placeholder="Member Name" ReadOnly="True"></input>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Book Name</label>
                            <div class="form-group">
                                <input CssClass="form-control" ID="TextBox4" runat="server" placeholder="Book Name" ReadOnly="True"></input>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Start Date</label>
                            <div class="form-group">
                                <input CssClass="form-control" ID="TextBox5" runat="server" placeholder="Start Date" TextMode="Date"></input>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>End Date</label>
                            <div class="form-group">
                                <input CssClass="form-control" ID="TextBox6" runat="server" placeholder="End Date" TextMode="Date"></input>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <input ID="Button2" class="btn btn-lg btn-block btn-primary" runat="server" value="Issue" />
                        </div>
                        <div class="col-6">
                            <input type="button" ID="Button4" class="btn btn-lg btn-block btn-success" runat="server" value="Return" />
                        </div>
                    </div>
                </div>
            </div>
            <a href="Home"><< Back to Home</a><br>
            <br>
        </div>
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <center>
                                <h4>Issued Book List</h4>
                            </center>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <hr>
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Book_ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Member_ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MemberName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Contact_No)
                                    </th>

                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Book_ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Member_ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MemberName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contact_No)
                                        </td>
                                    </tr>
                                }
                                </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input class="table table-striped table-bordered" ID="GridView1" runat="server"></input>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

