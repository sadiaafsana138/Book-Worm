
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="css2/customstylesheet.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BookWorm", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Book List", "Index", "Book_Table")</li>
                    @if (Session["Admin_ID"] != null)
                    {
                        <li>@Html.ActionLink("Members", "Index", "Member_Table")</li>
                    }
                    <li>@Html.ActionLink("Donation", "Index", "CharityFund_Table")</li>

                </ul>

                
                @if (Session["UserName"] == null)
                {
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("User Login", "Index", "Login")</li>
                <li>@Html.ActionLink("SignUp", "Index", "Signup")</li>
            </ul>
                }


                @if (Session["UserName"] != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Hello" + @Session["UserName"].ToString(), "Index", "UserProfile")</li>
                        <li><a href="/Login/Logout">
    <asp:LinkButton class="footerlinks" ID="LinkButton6" runat="server">Logout</asp:LinkButton>
    &nbsp;
</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <!-- Footer -->
        <footer>
            <div id="footer1" class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                        @if (Session["UserName"] == null)
                        {
                            <p>
                                <a href="@Url.Action("Index", "AdminLogin")">
                                    <asp:LinkButton class="footerlinks" ID="LinkButton6" runat="server">Admin Login</asp:LinkButton>
                                </a>
                                &nbsp;
                            </p>
                        }
                        @if (Session["Admin_ID"] != null)
                        {
                            <p>
                                <a href="@Url.Action("Index", "Author")">
                                    <asp:LinkButton class="footerlinks" ID="LinkButton11" runat="server">Author Management</asp:LinkButton>
                                </a>
                                &nbsp;
                                <a href="@Url.Action("Index", "Publisher")">
                                    <asp:LinkButton class="footerlinks" ID="LinkButton12" runat="server">Publisher Management</asp:LinkButton>
                                </a>
                                &nbsp;
                                <a href="@Url.Action("Index", "Book_Table")">
                                    <asp:LinkButton class="footerlinks" ID="LinkButton8" runat="server">Book Inventory</asp:LinkButton>
                                </a>
                                &nbsp;
                                <a href="@Url.Action("Index", "BookIssuing")">
                                    <asp:LinkButton class="footerlinks" ID="LinkButton9" runat="server">Book Issuing</asp:LinkButton>
                                </a>
                                &nbsp;
                                <a href="@Url.Action("Index", "MemberManagement")">
                                    <asp:LinkButton class="footerlinks" ID="LinkButton10" runat="server">Member Management</asp:LinkButton>
                                </a>
                            </p>

                        }


                    </div>

                </div>
            </div>


        </footer>
        <!-- ./Footer -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
